{
    "properties": {
        "mode": "incremental",
        "template": {
            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "resources": [{
                "apiVersion": "2018-11-01",
                "name": "WAppmoraes",
                "type": "Microsoft.Web/sites",
                "location": "eastus",
                "tags": {},
                "dependsOn": [
                    "Microsoft.Web/serverfarms/SFarmTeste"
                ],
                "properties": {
                    "name": "WAppmoraes",
                    "siteConfig": {
                        "appSettings": [],
                        "metadata": [{
                                "name": "CURRENT_STACK",
                                //dotnetcore
                                //JAVA|11-java11
                                "value": "JAVA|11-java11"
                            }]
                        },
                    "serverFarmId": "/subscriptions/{{subscriptionId}}/resourcegroups/WAppTeste/providers/Microsoft.Web/serverfarms/SFarmTeste",
                    "hostingEnvironment": "",
                    "clientAffinityEnabled": true
                }
            },
            {
                "apiVersion": "2018-11-01",
                "name": "SFarmTeste",
                "type": "Microsoft.Web/serverfarms",
                "location": "eastus",
                "kind": "",
                "tags": {},
                "dependsOn": [],
                "properties": {
                    "name": "SFarmTeste",
                    "workerSize": "0",
                    "workerSizeId": "0",
                    "numberOfWorkers": "1",
                    "hostingEnvironment": ""
                },
                "sku": {
                    /*
                    Valores possíveis do Tier:
                    Basic e Free

                    Podem ser usados com a forma:
                    Basic - Quando for B1, B2 e B3
                    Free - Quando for F1*/
                    "Tier": "Free",
                    /*
                    Valores possíveis do Name:
                    F1
                    B1
                    B2
                    B3
                    */
                    "Name": "F1"
                }
            }]
        }
    }
}